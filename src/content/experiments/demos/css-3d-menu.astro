<style>
    .list {
        margin: 3rem auto 5rem auto;
        --box-background: #555c69;
        --highlighted-background: #6674d5;
        --animation-duration: 250ms;
        font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
        line-height: 1.5;
        font-weight: 400;
        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;
        display: flex;
        flex-direction: column;
        place-items: center;
        place-content: center;
    }

    .list-item {
        list-style: none;
        background: var(--box-background);
        background-color: var(--box-background);
        color: white;
        position: relative;
        width: 200px;
        z-index: var(--z-pos);
        transform: skewY(-15deg);
        transition:
            translate var(--animation-duration) ease-in-out,
            background-color var(--animation-duration) ease-in-out;

        &:hover {
            --box-background: var(--highlighted-background);
            translate: -25% 35%;
        }

        &::before {
            content: "";
            display: flex;
            place-items: center;
            place-content: center;
            pointer-events: none;
            width: 100%;
            height: 100%;
            position: absolute;
            top: -100%;
            left: -20px;
            background-color: color-mix(
                in srgb,
                var(--box-background),
                white 10%
            );
            transform: skewX(45deg);
            transition: background-color var(--animation-duration) ease-in-out;
        }

        &:first-child::before {
            content: "yayu.dev";
        }

        &::after {
            content: attr(data-icon);
            display: flex;
            place-items: center;
            place-content: center;
            width: 40px;
            height: 100%;
            position: absolute;
            top: -20px;
            left: -40px;
            background-color: color-mix(
                in srgb,
                var(--box-background),
                black 10%
            );
            transform: skewY(45deg);
            transition: background-color var(--animation-duration) ease-in-out;
        }

        & a {
            display: block;
            padding: 0.5rem 1rem;
            color: currentColor;
            text-decoration: none;
        }
    }
</style>

